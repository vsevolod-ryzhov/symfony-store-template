{% extends 'admin.html.twig' %}

{% block title %}Категории{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0">
        <li class="breadcrumb-item"><a href="{{ path('admin.home') }}">Главная</a></li>
        <li class="breadcrumb-item active">Категории</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="mb-3">
        <a href="{{ path('admin.categories.create') }}" class="btn btn-success">Добавить категорию</a>
        <a href="{{ path('admin.categories') }}" class="btn btn-primary">Список категорий</a>
    </div>

    <div class="card">
        <div class="card-header">Дерево категорий</div>
        <div class="card-body">
            <div id="nested-sortable-root" data-callback="{{ path('admin.categories.sortable.sort') }}">
                {{ categories|raw }}
            </div>
        </div>
    </div>
{% endblock %}