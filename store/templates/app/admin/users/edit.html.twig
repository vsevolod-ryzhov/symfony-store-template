{% extends 'admin.html.twig' %}

{% block title %}Редактировать пользователя #{{ user.id }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0">
        <li class="breadcrumb-item"><a href="{{ path('admin.home') }}">Главная</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin.users') }}">Пользователи</a></li>
        <li class="breadcrumb-item active">Редактировать пользователя #{{ user.id }}</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Редактировать</button>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

