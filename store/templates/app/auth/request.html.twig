{% extends 'centered.html.twig' %}

{% block title %}Сброс пароля{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {% include 'parts/messages.html.twig' %}

                        <h1>Сброс пароля</h1>

                        {{ form_start(form) }}

                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <button type="submit" class="btn btn-block btn-success">Сбросить пароль</button>

                        {{ form_end(form) }}
                        <div class="mt-3">
                            <a href="{{ path('app_login') }}" class="btn btn-block btn-secondary">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
